<link rel='stylesheet' href='/stylesheets/loginstyle.css' />
<style>
    .signupactive {
        background-color: #DCDCDC;
    }
</style>
<div class="wrap">
    <p style="font-size: 48px; text-align: center; margin-top:-82px;">Sign up</p>
<form action="/authNew">

    <div class="avatar">
        <img src="/images/image.png">
    </div>

    <input type="text" placeholder="username" required>
    <div class="bar">
        <i></i>
    </div>
    <input type="password" placeholder="password" required>
    <div class="bar">
        <i></i>
    </div>
    <input type="justtext" placeholder="First name" required>
    <div class="bar">
        <i></i>
    </div>
    <input type="justtext" placeholder="Last name" required>
    <div class="bar">
        <i></i>
    </div>
    <input type="justtext" placeholder="Birthday" required>
    <div class="bar">
        <i></i>
    </div>
    <input type="email" placeholder="E-mail" required>

    <br>


    <button>Sign up</button>
    </form>
</div>